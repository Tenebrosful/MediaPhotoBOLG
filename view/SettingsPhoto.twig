{% extends "base.twig" %}
{% block content %}
    <form method="POST" enctype="multipart/form-data">
        <div>
            <input type="file" name="image" id="image" accept="image/png, image/jpeg" required>
            <label for="titre">Titre:</label>
            <input type="text" name="titre" id="titre" value="{{ photo.titre }}" required>
            <label for="description">Description:</label>
            <input type="text" name="description" id="description" value="{{ photo.description }}" required>
        </div>
        {% if message is defined %}
        <p class="error">{{ message }}</p>
        {% endif %}
        <input class="button" type="submit" value="Sauvegarder">
    </form>
    <a class="button" href="../{{ galerie.id }}">Annuler</a>
    <form method="POST" action="/galerie/{{ galerie.id }}/photo/{{ photo.id }}/delete">
        <input class="button" type="submit" value="Delete">
    </form>
{% endblock %}