{% extends "base.twig" %}
{% block content %}
    <div>
        <label for="login">Login:</label>
        <input type="text" name="login" id="login" value="{{ session.user.identifiant }}" disabled>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" value="{{ session.user.email }}" disabled>
    </div>
    <form method="POST">
        <label for="oldpassword">Ancien mot de passe:</label>
        <input type="password" name="oldpassword" id="oldpassword" required>
        <label for="newpassword">Nouveau mot de passe:</label>
        <input type="password" name="newpassword" id="newpassword" required>
        <label for="confirmnewpassword">Confirmer le nouveau mot de passe:</label>
        <input type="password" name="confirmnewpassword" id="confirmnewpassword" required>
        <p>{{ message }}</p>
        <input class="button" type="submit" value="Modifier le mot de passe">
    </form>
{% endblock %}