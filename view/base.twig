<!-- Template -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- Informations sur le site -->
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/mediaphoto.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Mediaphoto</title>
</head>
<body>

<div class="panneauCentre">
    <h1>MediaPhotoBlog</h1>
    <nav>
        <ul class="nav justify-content-center">
            <li class="nav-item"><a class="nav-link lien" href="/home">Home</a></li>
            {% if session.user is defined %}
                <li class="nav-item"><a class="nav-link lien" href="/galeries?share=checked&private=checked">Galeries</a></li>
                {% set user = session.user %}

                <li class="nav-item"><a class="nav-link lien" href="/profil">Profil</a></li>
                <li class="nav-item"><a class="nav-link lien" href="/disconnect">Deconnexion</a></li>


            {% else %}
                <li class="nav-item"><a class="nav-link lien" href="/galeries?public=checked">Galeries</a></li>
                <li class="nav-item"><a class="nav-link lien" href="/login">Se connecter</a></li>
                <li class="nav-item"><a class="nav-link lien" href="/signup">S'inscire</a></li>
            {% endif %}
        </ul>
    </nav>
    <div class="container">
        {% block content %}{% endblock %}
    </div>
</div>

</body>
</html>